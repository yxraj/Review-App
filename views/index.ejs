<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>User Reviews</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <style>
      .center{
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 5px;
      }
      .wish{
        display: flex;
        justify-content: center;
        align-content: center;
        flex-wrap: wrap;
      }
      .card {
        margin: 10px;
      }
    </style>
    <div class="center">
      <h1>Enter Your Review!</h1>
    </div>
    <form action="/review" method="post" >
      <div class="mb-3">
        <label for="review" class="form-label"></label>
        <textarea name="review" class="form-control" id="review" rows="3"></textarea>
      </div>
      <div class="col-auto center">
        <button type="submit" class="btn btn-primary mb-3">Submit Review</button>
      </div>
    </form>
    <div class="wish"><h3>Reviews Of Customers</h3></div>
    <div class="wish">
      <% users.forEach(function(user) { %>
        <div class="card" style="width: 22rem;">
          <img src="https://t4.ftcdn.net/jpg/05/05/39/07/360_F_505390776_8ilykzGiVSpIjUqdEXFhDY1ACRJZPDRD.jpg" class="card-img-top" alt="...">
          <div class="card-body">
            <p class="card-text"><strong>Review:</strong> <%= user.userReview %></p>
            <p class="card-text"><strong>Time:</strong> <%= user.Time %></p>
          </div>
        </div>
      <% }); %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
